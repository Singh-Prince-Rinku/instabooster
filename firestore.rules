rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Basic user permissions
    match /users/{userId} {
      // Allow users to read their own document or publicly visible user fields
      allow read: if request.auth != null && 
                  (request.auth.uid == userId || 
                  resource.data.visibility == 'public');
      
      // Only allow users to modify their own data
      allow create, update: if request.auth != null && request.auth.uid == userId;
    }
    
    // User search rules - more restrictive for security
    match /users/{document=**} {
      // Only allow limited queries with proper authentication
      allow list: if request.auth != null && 
                  (request.query.limit <= 50);
    }
    
    // Friend request operations
    match /friendRequests/{requestId} {
      allow read: if request.auth != null && 
                  (request.auth.uid == resource.data.senderId || 
                   request.auth.uid == resource.data.recipientId);
      allow create: if request.auth != null && request.auth.uid == request.resource.data.senderId;
      allow update, delete: if request.auth != null && 
                           (request.auth.uid == resource.data.senderId || 
                            request.auth.uid == resource.data.recipientId);
    }
    
    // Collections-specific rules
    match /collections/{collectionId} {
      // Allow read if authenticated
      allow read: if request.auth != null;
      
      // Allow create if authenticated and setting yourself as the owner
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Allow update/delete if you're the owner
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Allow querying collections by userId
    match /collections/{document=**} {
      allow list: if request.auth != null;
    }
    
    // Content items in collections
    match /collections/{collectionId}/items/{itemId} {
      // Allow read if authenticated
      allow read: if request.auth != null;
      
      // Allow write if you own the parent collection
      allow write: if request.auth != null && 
                   get(/databases/$(database)/documents/collections/$(collectionId)).data.userId == request.auth.uid;
    }
    
    // Allow users to read and write their own data in other collections
    match /{collection}/{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
                  (
                    // If creating a new document with your userId
                    (request.resource.data.userId == request.auth.uid) || 
                    // If updating an existing document you own
                    (resource != null && resource.data.userId == request.auth.uid)
                  );
    }
  }
} 