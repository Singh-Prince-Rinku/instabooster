{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["es2022", "dom"],
    "moduleResolution": "node",
    "outDir": "../dist/scripts",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "sourceMap": true,
    "baseUrl": "..",
    "paths": {
      "@/*": ["src/*"]
    },
    "skipLibCheck": true
  },
  "include": ["./**/*.ts", "../src/lib/automation/**/*.ts"],
  "exclude": ["node_modules"]
} 